# Copy this file to .env.local and fill in your API keys

# OpenAI API Key (Required for GPT-4o Vision and Text)
# Get from: https://platform.openai.com/api-keys
# Note: Project has been migrated from OpenRouter to direct OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Rate Limiting & Processing Configuration (Optimized Settings)
GPT4O_MAX_TOKENS=768
GPT4O_TEMPERATURE=0.1
GPT4O_TOP_P=0.1
GPT4O_FREQUENCY_PENALTY=0.7
GPT4O_PRESENCE_PENALTY=0.3

# Chunk Processing Parameters
MAX_CHUNK_TOKENS=3000
CHUNK_PROCESSING_DELAY=2000
MAX_PARALLEL_CHUNKS=1

# Validation Settings
CONTENT_MATCH_THRESHOLD=98
VALIDATION_RETRIES=5

# Optional: For debugging
NODE_ENV=development